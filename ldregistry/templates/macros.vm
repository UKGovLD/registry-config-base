#macro(mmetadatarow $label $values)
  #if(!$values.isEmpty())<tr><td class="align-right span2"><strong>$label</strong></td><td>#foreach($value in $values)#render($value)#if( $foreach.hasNext ) <br /> #end#end</td></tr>#end
#end

